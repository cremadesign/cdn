<IfModule mod_headers.c>
    # Set Custom Headers
    Header set Author "Stephen D. Ginn Jr at Crema Design Studio"
    Header set Hiring-Now "Apply at cremadesignstudio.com/apply and mention this header."

    # Enable HTTP Strict Transport Security (HSTS) to help prevent man-in-the-middle attacks.
    # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
</IfModule>


# ============================================================================
#	COMPRESSION
# ============================================================================

<IfModule mod_deflate.c>
    # Make sure Apache tells the browser certain file types use gzip encoding.
    # Without that info, the browser can't understand the content.
    # https://httpd.apache.org/docs/current/mod/mod_mime.html#addencoding

    <IfModule mod_mime.c>
        AddEncoding gzip              svgz
    </IfModule>

    # Add GZip Compression for certain file types
    <filesmatch "\.(js|json|xml|css|html|shtml|ssi|php|ico|eot|otf|ttf)$">
        SetOutputFilter DEFLATE
    </filesmatch>
</IfModule>


# ============================================================================
#	ADD CACHING
#	https://gist.github.com/hans2103/fca6f184df1c2c41b3dd
# ============================================================================

<IfModule mod_headers.c>
	Header set Connection keep-alive

	# Set Expires Headers
	<FilesMatch ".(ico|pdf|flv|jpg|jpeg|png|webp|gif|js|css|swf)$">
	Header set Expires "Thu, 02 Jan 2020 20:00:00 GMT"
	</FilesMatch>

	# Cache-control headers

    # 1 YEAR
    <filesMatch "\.(ico|pdf|flv|jpg|jpeg|png|webp|gif|swf)$">
        Header set Cache-Control "max-age=864000, public"
    </filesMatch>

    # 1 DAY
    <filesMatch "\.(css|js)$">
        Header set Cache-Control "max-age=1209600, private"
    </filesMatch>

    # 2 HOURS
    <filesMatch "\.(html|htm|ssi|xml|txt)$">
        Header set Cache-Control "max-age=7200"
    </filesMatch>

    <FilesMatch "\.(gif|jpg|png|webp|ico|css|js|pdf|txt)$">
        Header append Cache-Control "public"
    </FilesMatch>
</IfModule>

<IfModule pagespeed_module>
	ModPagespeed on
	ModPagespeedEnableFilters make_google_analytics_async
</IfModule>

# Another method of cache control. I'm not sure both methods are necessary.
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresDefault                                      "access plus 1 month"

    # CSS
    ExpiresByType text/css                              "access plus 1 year"

    # Data interchange
    ExpiresByType application/json                      "access plus 0 seconds"
    ExpiresByType application/xml                       "access plus 0 seconds"
    ExpiresByType text/xml                              "access plus 0 seconds"

    # Favicon (cannot be renamed!)
    ExpiresByType image/x-icon                          "access plus 1 week"

    # HTML components (HTCs)
    ExpiresByType text/x-component                      "access plus 1 month"

    # HTML
    ExpiresByType text/html                             "access plus 0 seconds"

    # JavaScript
    ExpiresByType application/javascript                "access plus 1 year"

    # Manifest files
    ExpiresByType application/x-web-app-manifest+json   "access plus 0 seconds"
    ExpiresByType text/cache-manifest                   "access plus 0 seconds"

    # Media
    ExpiresByType audio/ogg                             "access plus 1 month"
    ExpiresByType image/gif                             "access plus 1 month"
    ExpiresByType image/jpeg                            "access plus 1 month"
    ExpiresByType image/png                             "access plus 1 month"
	ExpiresByType image/webp                            "access plus 1 month"
    ExpiresByType video/mp4                             "access plus 1 month"
    ExpiresByType video/ogg                             "access plus 1 month"
    ExpiresByType video/webm                            "access plus 1 month"

    # Web feeds
    ExpiresByType application/atom+xml                  "access plus 1 hour"
    ExpiresByType application/rss+xml                   "access plus 1 hour"

    # Web fonts
    ExpiresByType application/font-woff2                "access plus 1 month"
    ExpiresByType application/font-woff                 "access plus 1 month"
    ExpiresByType application/vnd.ms-fontobject         "access plus 1 month"
    ExpiresByType application/x-font-ttf                "access plus 1 month"
    ExpiresByType font/opentype                         "access plus 1 month"
    ExpiresByType image/svg+xml                         "access plus 1 month"
</IfModule>


